[user]
name = Philipp Andreychev
email = andreychev@me.com
[core]
editor = nvim
[advice]
detachedHead = false
[commit]
verbose = true
[color]
branch = auto
diff = auto
interactive = auto
status = auto
[init]
defaultBranch = main
[web]
browser = google-chrome
[credential]
helper = osxkeychain
[filter "lfs"]
process = git-lfs filter-process
required = true
clean = git-lfs clean -- %f
smudge = git-lfs smudge -- %f
[pull]
ff = only
[push]
default = current
[fetch]
prune = true
writeCommitGraph = true
[alias]
# Basic aliases
a = add
k = ls-files
ls = ls-files
b = branch
t = tag
s = status
co = checkout
ci = commit
sw = switch
d = !git diff --stat -p -C
ds = !git diff --staged --stat -p -C
undo = reset HEAD~1 --mixed
pushf = push --force-with-lease
amend = commit --amend --no-edit
# Show the aliases list
aliases = !git config -l | grep alias | cut -c 7-
