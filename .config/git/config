[user]
name = Philipp Andreychev
email = andreychev@me.com
[core]
editor = vim
[commit]
verbose = true
[color]
branch = auto
diff = auto
interactive = auto
status = auto
[init]
defaultBranch = main
[web]
browser = open
[credential]
helper = osxkeychain
[filter "lfs"]
process = git-lfs filter-process
required = true
clean = git-lfs clean -- %f
smudge = git-lfs smudge -- %f
[pull]
rebase = true
prune = true
[alias]
# Basic aliases
k = !git ls-files
b = !git branch
t = !git tag
s = !git status
d = !git diff --stat -p -C
ds = !git diff --staged --stat -p -C
undo = !git reset HEAD~1 --mixed
# Smart aliases using fzf
a = !git ls-files --deleted --modified --other --exclude-standard | fzf -0 -m --preview 'git diff --color=always {-1}' | xargs -r git add
co = !git branch --all | grep -v '^[*+]' | awk '{print $1}' | fzf -0 --preview 'git show --color=always {-1}' | sed 's/remotes\\/origin\\///g' | xargs -r git checkout
delete-branch = !git branch | grep -v '^[*+]' | awk '{print $1}' | fzf -0 --multi --preview 'git show --color=always {-1}' | xargs -r git branch --delete
r = !git diff --name-only --cached | fzf -0 -m --preview 'git diff --color=always {-1}' | xargs -r git reset
# Show the aliases list
aliases = !git config -l | grep alias | cut -c 7-
